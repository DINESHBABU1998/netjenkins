// Declarative //
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echa 'Building...'
            }
        }
        stage('Test') {
            steps {
                echa 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echa 'Deploying....'
            }
        }
    }
}
